<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HearingTest.MainPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="DarkViolet"
             Padding="0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ScrollView VerticalScrollBarVisibility="Never" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="4">
            <StackLayout Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                <Button  BorderColor = "White" BorderWidth = "5" x:Name="EasyButton" Text="Easy" FontAttributes="Bold" Grid.Column="0" Grid.Row="1" FontSize="Large" Clicked="EasyButton_Clicked" CornerRadius="30" BackgroundColor="LightGreen" Margin = "5"/>
                <Button  BorderColor = "White" BorderWidth = "5" x:Name="MediumButton" Text="Medium" FontAttributes="Bold" Grid.Column="1" Grid.Row="1" FontSize="Large" Clicked="MediumButton_Clicked" CornerRadius="30" BackgroundColor="DeepSkyBlue" Margin = "5"/>
                <Button  BorderColor = "White" BorderWidth = "5" x:Name="HardButton" Text="Hard" FontAttributes="Bold" Grid.Column="0" Grid.Row="2" FontSize="Large" Clicked="HardButton_Clicked" CornerRadius="30" BackgroundColor="DimGray" Margin = "5"/>
                <Button  BorderColor = "White" BorderWidth = "5" x:Name="ExpertButton" Text="Expert" FontAttributes="Bold" Grid.Column="1" Grid.Row="2"  FontSize="Large" Clicked="ExpertButton_Clicked" CornerRadius="30" BackgroundColor="IndianRed" Margin = "5"/>
                <Button  BorderColor = "White" BorderWidth = "5" x:Name="IntervalsButton" Text="Intervals" FontAttributes="Bold" Grid.Column="0" Grid.Row="3"  FontSize="Large" Clicked="IntervalsButton_Clicked" CornerRadius="30" BackgroundColor="DarkBlue" Margin = "5"/>
            </StackLayout>
           
        </ScrollView>
        
        <StackLayout Grid.ColumnSpan="2" BackgroundColor="White">
            <Label Text = "Hearing" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Center" Grid.ColumnSpan="2" VerticalTextAlignment="End"  TextColor="DarkViolet"  />
            <Label Text = "Test" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Center" Grid.ColumnSpan="2" VerticalTextAlignment="End" TextColor="DarkViolet" />
    
        </StackLayout>
    </Grid>

</ContentPage>
